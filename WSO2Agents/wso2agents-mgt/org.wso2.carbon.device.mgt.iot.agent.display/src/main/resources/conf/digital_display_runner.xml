        <WebBrowser>
            <Name>epiphany</Name>
            <Path>epiphany</Path>
            <Port>8000</Port>
        </WebBrowser>

        <Player>
            <Name>omxplayer</Name>
            <Path>omxplayer</Path>
        </Player>

    </KernelRunner>

</DigitalDisplay>
